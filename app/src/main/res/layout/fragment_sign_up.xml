<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.SignInActivity"
    android:background="@color/TryIt_dark_white"
    android:focusable="true"
    android:clickable="true"
    >

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >
    <ImageView
        android:id="@+id/sign_up_img_fr"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/sign_up_icon2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        ></ImageView>


    <EditText
        android:id="@+id/user_name_edit_text_fr"
        android:textSize="20sp"
        android:background="@drawable/et_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/user_name_icon"
        android:drawableTint="@color/TryIt_main_color"
        android:cursorVisible="false"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_img_fr"
        android:hint="User Name"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:drawablePadding="16dp"
        android:textColorHint="#8D000000"
        ></EditText>

    <EditText
        android:id="@+id/email_edit_text_fr"
        android:textSize="20sp"
        android:background="@drawable/et_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/mail_icon"
        android:drawableTint="@color/TryIt_main_color"
        android:cursorVisible="false"
        app:layout_constraintTop_toBottomOf="@+id/user_name_edit_text_fr"
        android:hint="Email"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:drawablePadding="16dp"
        android:textColorHint="#8D000000"
        ></EditText>



    <EditText
        android:id="@+id/password_edit_text_fr"
        android:textSize="20sp"
        android:background="@drawable/et_style"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_icon"
        android:drawableTint="@color/TryIt_main_color"
        android:cursorVisible="false"
        app:layout_constraintTop_toBottomOf="@+id/email_edit_text_fr"
        android:hint="Password"
        android:ems="10"
        android:layout_marginTop="22dp"
        android:layout_marginHorizontal="10dp"
        android:padding="8dp"
        android:drawablePadding="16dp"
        android:textColorHint="#8D000000"
        ></EditText>
    <EditText
        android:id="@+id/confirm_password_edit_text_fr"
        android:textSize="20sp"
        android:background="@drawable/et_style"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/password_icon"
        android:drawableTint="@color/TryIt_main_color"
        android:cursorVisible="false"
        app:layout_constraintTop_toBottomOf="@+id/password_edit_text_fr"
        android:hint="Re-Password"
        android:ems="10"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="22dp"
        android:padding="8dp"
        android:drawablePadding="16dp"
        android:textColorHint="#8D000000"
        ></EditText>

    <TextView
        android:id="@+id/sign_up_btn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:gravity="center"
        android:textColor="@color/TryIt_dark_white"
        android:fontFamily="@font/circular"
        app:layout_constraintTop_toBottomOf="@+id/confirm_password_edit_text_fr"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/login_ripple_effect"
        android:text="Sign Up"
        android:textSize="20sp"
        ></TextView>




    <TextView
        android:id="@+id/sign_in_button_fr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In"
        android:drawableEnd="@drawable/profile_nav_icon"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_up_btn"
        android:layout_margin="32dp"
        ></TextView>



</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

